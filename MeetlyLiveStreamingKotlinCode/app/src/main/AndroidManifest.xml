<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.adroit.letslinkup">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_meeting_main"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_meeting_main"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="LockedOrientationActivity">
        <activity android:name=".activity.TestActivity" />
        <activity android:name=".activity.VerifyMobileActivity" />
        <activity android:name=".activity.VerifyEmailActivity" />
        <activity android:name=".activity.ChangePasswordActivity" />
        <activity android:name=".activity.ProfileActivity" />
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/app_deep_link_domain"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.RegistrationActivity" />
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/Theme.AppCompat"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.adroit.letslinkup.activity.AppIntroActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.AuthenticationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MeetingHistoryActivity"
            android:parentActivityName=".activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.FaqsActivity"
            android:parentActivityName=".activity.MainActivity"
            android:screenOrientation="portrait" /> <!-- Admob -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_app_id" />
    </application>

</manifest>